<%
  blogs ||= recent_blogs(@page, @per_page)
%>
<div>
  <div id="sub_nav">
    <%= link_to t(:back_to, :nome => t(:home)), home_path() %>
  </div>
  <div class="activity_box">
    <h2><%=t(:all_blogs_label)%></h2>
    <%= render :partial => 'blogs/newest_blog', :collection => blogs %>
  	<%= will_paginate blogs %>
  </div>
  <div class="clear"></div>
</div>

