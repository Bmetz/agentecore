<h1><%= t(:editing_post_in_label) %> <%=h @post.topic.title%></h1>

<%= error_messages_for :forum_post %>


<% less_form_for(@post, :url => forum_topic_post_url(@forum, @topic, @post)) do |f| %>

    <%= f.text_area :body %>

    <%= f.submit t(:option_update), :class=> "button" %>
<% end %>

<%= link_to t(:back), forum_topic_path(@forum, @topic) %>
