<div id="sub_nav">
  <%= link_to "&larr; Voltar para a Página #{@page.title}", wiki_page_path(@page) %>
</div>

<h1><%= @title = "Revisões de #{@page.title}" %></h1>

<% for revision in @revisions %>
  <li>
    Revisado dia 
    <strong><%= revision.created_at.strftime('%d/%m/%y às %H:%M:%S') %></strong>, por 
    <%= link_to revision.profile.f, profile_path(revision.profile) %> (<%= link_to 'Visualizar', wiki_page_wiki_revision_path(@page, revision) %>)
  </li>
<% end %>
