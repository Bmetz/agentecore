<div class="forum_topic">
  <%= link_to t(:forums), forums_path %> > <%= link_to h(@forum.name), forum_path(@forum) %> > <%=h @topic.title%>

  <h1><%=h @topic.title %></h1>
  
  <div id="topic_details">
    <%= topic_details(@topic)%>
  </div>
  
  <div id="sub_nav">
    <%= link_to t(:post_a_follow_up_label), "\#followup" %>
    <%= link_to t(:back_to, :nome => @forum.name), forum_path(@forum) %>
  </div>

  <%= will_paginate @posts %>

  <ul id="posts_list">
    <%= render :partial => 'forum_posts/post', :collection => @posts %>
  </ul>

  <a href="" name="followup"></a>
  <div id="<%= @topic.dom_id%>_new_post" class="topic_followup post">
    <div class="info"><h2><%=t(:post_a_follow_up_label)%></h2></div>
    <div class="body">
      <%- if @u %>
      <%= render :partial => "forum_posts/form", :locals=>{:css_class=>:followup_post_body} %>
      <%- else %>
      <h1><%=t(:you_must)%> <%= link_to t(:login), login_path %> <%=t(:or)%> <%= link_to t(:sign_up), signup_path %> <%=t(:to_participate)%>!</h1>
      <%- end %>
    </div>
  </div>

    <%= will_paginate @posts %>


</div>
