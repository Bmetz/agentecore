


<% content_for :head do  -%>
  <%= auto_discovery_link_tag :rss, formatted_profile_blogs_url(@profile, :rss), :title=> t(:blog_title, :nome => @profile.f) %>
<% end -%>





<div class="left" id="column_l">

  <h1><%= icon @profile %> <%= t(:blog_title, :nome => @profile.f) %></h1>

  <div id="sub_nav">
    <%= link_to t(:back_to_dashboard), profile_path(@profile) if me %>
    <%= link_to t(:new_post_label), new_profile_blog_path(@profile) if me %>
    <%= link_to t(:back_to_profile, :nome => h(@profile.f)), profile_path(@profile) unless me %>
  </div>

  <%= render :partial => 'blogs/blog', :object => @blog %>
</div>

