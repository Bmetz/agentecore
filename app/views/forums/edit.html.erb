<h1><%=t(:editing_forum)%></h1>

<div id="sub_nav">
  <%= link_to t(:back_to_forums), forums_path %>
</div>

<%= error_messages_for :forum %>

<% less_form_for(@forum) do |f| %>

    <%= f.text_field :name %>

    <%= f.text_area :description %>

    <div class="row button">
      <%= f.submit t(:option_update), :class => 'button' %>
    </div>

<% end %>
